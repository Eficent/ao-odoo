<odoo>

    <template id="message_notification_email" inherit_id="mail.message_notification_email">
        <xpath expr="//td[@valign='center']" position="replace">
            <td valign="center">
                <a t-if="has_button_access"
                        t-att-href="button_access['url']"
                        style="padding: 8px 12px; font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400; background-color: #1f91d3; border: 0px solid #1f91d3; border-radius:3px">
                    <t t-esc="button_access['title']"/>
                </a>
                <t t-if="actions">
                    <t t-foreach="actions" t-as="action">
                        |
                        <a t-att-href="action['url']" style="color: #1f91d3; text-decoration:none !important;">
                            <t t-esc="action['title']"/>
                        </a>
                    </t>
                </t>
            </td>
        </xpath>
        <xpath expr="//td[@align='right']" position="replace">
            <td valign="center" align="right">
                <img src="https://www.lulzbot.com/sites/default/files/odoo_header_AO-LB_logo.jpg" alt="Aleph Objects, Inc. - Makers of the LulzBot 3D Printers" style="padding: 0px; margin: 0px; height: auto; max-width: 80px; max-height: 40px;"/>
            </td>
        </xpath>
        <xpath expr="//p[@style='color: #555555; margin-top:32px;']" position="replace">
            <p style="color: #555555; margin-top:32px;">
                Sent
                <span t-if="company.name">
                    by
                    <a t-if="website_url" t-att-href="website_url" style="text-decoration:none; color: #1f91d3;">
                        <span t-esc="company.name"/>
                    </a>
                    <span t-if="not website_url" t-esc="company.name"/>
                </span>
                using
                <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" style="text-decoration:none; color: #1f91d3;">Odoo</a>.
            </p>
        </xpath>
    </template>

</odoo>
