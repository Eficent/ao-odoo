<odoo>

    <record id="mrp_bom_standard_cost_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.standard.cost.form</field>
        <field name="model">mrp.bom.standard.cost</field>
        <field name="arch" type="xml">
            <form>
                <group name="step_1"
                       string="Select product to explode">
                    <field name="product_id"
                           domain="[('bom_ids','!=',False),('bom_ids.type','!=','phantom')]"/>
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="bom_id"
                           domain="['&amp;', '|', ('product_id','=',product_id),
                           '&amp;', ('product_tmpl_id.product_variant_ids','=',product_id),
                           ('product_id','=',False), ('type', '=', 'normal')]"/>
                </group>
                <footer>
                    <button name="do_explode"
                            type="object"
                            string="Explode"
                            class="oe_highlight"/>
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mrp_bom_standard_cost_view_form2" model="ir.ui.view">
        <field name="name">mrp.bom.standard.cost.form2</field>
        <field name="model">mrp.bom.standard.cost</field>
        <field name="arch" type="xml">
            <form>
                <group name="step_2" string="Explosion result">
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="bom_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="standard_cost_total" readonly="1"/>
                        <field name="standard_cost_material" readonly="1"/>
                        <field name="standard_total_cost_labor" readonly="1"/>
                        <field name="standard_total_cost_overhead" readonly="1"/>
                    </group>
                    <field name="line_ids" nolabel="1" colspan="2">
                        <tree create="0" delete="0" editable="1">
                            <field name="bom_level"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"
                                   groups="product.group_uom"/>
                            <field name="standard_cost_material"/>
                            <field name="standard_cost_only_material"/>
                            <field name="standard_cost_labor"/>
                            <field name="standard_cost_overhead"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="%(mrp_bom_standard_cost.action_report_bom_standard_cost)d"
                            type="action" string="Print Report"
                            class="oe_highlight"/>
                    or
                    <button name="%(mrp_bom_standard_cost.action_report_mrp_bom_standard_cost_html)d"
                            type="action" string="Show Report"
                            class="oe_highlight"/>
                    or
                    <button special="cancel"
                            string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mrp_bom_standard_cost_action" model="ir.actions.act_window">
        <field name="name">BoM Standard Cost Explosion</field>
        <field name="res_model">mrp.bom.standard.cost</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="mrp_bom_standard_cost_menu"
              action="mrp_bom_standard_cost_action"
              parent="mrp.menu_mrp_reporting"
              sequence="50"/>

</odoo>
