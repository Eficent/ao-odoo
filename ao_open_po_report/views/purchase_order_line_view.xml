<odoo>

    <record id="open_po_line_report_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.tree - open_po_report</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree default_order='date_planned'
                  create="false" editable="top" delete="false"
                  decoration-danger="date_planned &lt;= current_date or
                    balance_due &gt; price_total"
                  decoration-warning="qty_invoiced == qty_received and
                    balance_due &lt; price_total"
                  decoration-success="qty_invoiced == qty_received and
                    balance_due == price_total">
                <field name="order_id" widget="many2one" readonly="True"/>
                <field name="date_planned"  widget="date" readonly="True"/>
                <field name="partner_id" string="Vendor"/>
                <field name="product_id" readonly="True"/>
                <field name="qty_invoiced" readonly="True"/>
                <field name="qty_received" readonly="True"/>
                <field name="product_uom" readonly="True" string=" "/>
                <field name="balance_due" widget="monetary" readonly="True"/>
                <field name="price_total" widget="monetary" readonly="True"/>
                <field name="currency_id" readonly="True" string=" " invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="open_po_line_report_action" model="ir.actions.act_window">
        <field name="name">Open Purchase Lines Report</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_id" ref="open_po_line_report_tree"/>
        <field name="domain">[('order_id.state','=','purchase')]</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="menu_open_po_line_report"
        action="open_po_line_report_action"
        parent="purchase.menu_procurement_management"
        sequence="8"/>

</odoo>
